{
  "compilerOptions": {
    "target": "es2018",
    "rootDir": "./src",
    "outDir": "./bin",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
